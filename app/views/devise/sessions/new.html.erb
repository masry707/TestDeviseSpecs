<div class="col-md-offset-3 col-md-6 well">
  <div class="authform">
    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :role => 'form'}) do |f| %>
        <h3>Sign in</h3>
        <%= devise_error_messages! %>
        <div class="form-group">
          <%= f.label :email %>
          <%= f.email_field :email, :autofocus => true, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :password %>
          <%= f.password_field :password, class: 'form-control' %>
          <%- if devise_mapping.recoverable? %>
              <%= link_to 'Forgot password?', new_password_path(resource_name), class: 'right' %>
          <% end -%>
        </div>
        <% if devise_mapping.rememberable? -%>
            <div class="checkbox" style="width:150px">
              <label>
                <%= f.check_box :remember_me %> Remember me
              </label>
            </div>
        <% end -%>
        <%= f.submit 'Sign in', :class => 'btn btn-success btn-sm' %>
    <% end %>
    <div class="text-center">
      <%- if devise_mapping.registerable? %>
          If you don't have account, please <%= link_to 'sign up', new_registration_path(resource_name), class: 'link'  %>
      <% end -%>
    </div>
  </div>
</div>